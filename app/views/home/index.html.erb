<% if !@user.nil? %>
    <h1 class="d-flex justify-content-center">Welcome, <%=@user[:first_name]%> <%=@user[:last_name]%></h1> 

     <%= button_to "Log Out", logout_path, method: :delete, class: "btn btn-danger btn-block mt-3"%>

<% else %>
    <h1 class="text-center mt-3 pt-3">YOU NEED TO EITHER SIGN-IN OR SIGN-UP TO PROCEED FORWARD.</h1>
<% end %>